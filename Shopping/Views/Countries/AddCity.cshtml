@model Shopping.Models.CityViewModel

@{
    ViewData["Title"] = "Create";
}


<h1>Crear</h1>

<h4>Ciudad</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCity">
            <input type="hidden" asp-for="StateId" />
            <partial name="_City" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-warning" />
                <a asp-action="DetailsState" asp-route-id ="@Model.StateId" class="btn btn-outline-success " ></a>
            </div>
        </form>
    </div>
</div>




<div>
    <a class="btn btn-danger" asp-action="Index"> Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}