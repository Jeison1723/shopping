<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopping</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shopping.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-dark btn btn-warning" asp-area="" asp-controller="Home" asp-action="Index">Shopping</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-warning btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       

                        <li class="nav-item">
                            <a class="nav-link text-warning btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning btn btn-secondary" asp-area="" asp-controller="Categories" asp-action="Index">Categorias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning btn btn-secondary" asp-area="" asp-controller="Countries" asp-action="Index">Paises</a>
                            </li>
                        }

                       
                        
                        
                    </ul>
                    <ul class="nav navbar-nav navbar-right">

                        @if (User.Identity.IsAuthenticated)

                        {
                            <li class="nav-item">

                                <a class="nav-link text-warning btn btn-secondary" asp-area="" asp-controller="Account" asp-action="ChangeUser">@User.Identity.Name</a>

                            </li>
                            <li class="nav-item">

                                <a class="nav-link text-warning btn btn-secondary" asp-area="" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>

                            </li>

                        }

                        else

                        {

                            <li class="nav-item">

                                <a class="nav-link text-warning btn btn-secondary" asp-area="" asp-controller="Account" asp-action="Login">Iniciar Sesión</a>

                            </li>

                        }

                    </ul>

                    <button id="darkModeToggle" class="btn btn-outline-warning">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-yin-yang" viewBox="0 0 16 16">
                            <path d="M9.167 4.5a1.167 1.167 0 1 1-2.334 0 1.167 1.167 0 0 1 2.334 0" />
                            <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0M1 8a7 7 0 0 1 7-7 3.5 3.5 0 1 1 0 7 3.5 3.5 0 1 0 0 7 7 7 0 0 1-7-7m7 4.667a1.167 1.167 0 1 1 0-2.334 1.167 1.167 0 0 1 0 2.334" />
                        </svg>
                    </button>



                </div>
                
            </div>
           
        </nav>
    

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofZxYlRU+O3dCmUsw5+luE4L4Uq8ME6uz" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
       

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Jeison.S - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofZxYlRU+O3dCmUsw5+luE4L4Uq8ME6uz" crossorigin="anonymous"></script>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alerta-flotante" role="alert"></div>
</body>
</html>
