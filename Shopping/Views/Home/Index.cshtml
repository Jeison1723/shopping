@model Shopping.Models.HomeViewModel


@{

    ViewData["Title"] = "Index";

}
@if (Model.Quantity > 0)

{

    <a asp-action="ShowCart" class="btn btn-outline" style=" color: purple;">
        (@Model.Quantity)
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="2o" fill="purple" class="bi bi-cart4" viewBox="0 0 16 16">
            <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
        </svg>
    </a>

}



@foreach (var item in Model.Products)

{

    <div class="row">

        @if (item.Product1 != null)

        {

            <div class="col-md-3">

                <div class="card">

                    <div class="card_title">@item.Product1.Name</div>

                    <div class="card_body" >

                        <img src="data:image/png;base64,@Convert.ToBase64String(item.Product1.ProductImages.FirstOrDefault()?.Imagefile)" style="height:150px; max-width:280px;" />

                        <p class="mt-2">

                            @item.Product1.Description

                            <h4>@Html.DisplayFor(modelItem => item.Product1.Price)</h4>

                        </p>

                    </div>

                    <div class="card_foot">

                        <a asp-action="Details" asp-route-id="@item.Product1.Id" class="btn btn-success">Detalles</a>

                        <a asp-action="Add" asp-route-id="@item.Product1.Id" class="btn btn-outline-purple" style="background-color: purple; color: white;">Agregar</a>

                    </div>

                </div>

            </div>

        }

